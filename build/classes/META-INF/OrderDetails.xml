<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd">
<description>The minimal mappings for a persistent entity in XML.</description>
    <entity name="OrderDetails" class="Entities.OrderDetails" access="FIELD">
    <table name="orderdetails"/>
        <attributes>
        <id name="orderId"/>
            <basic name="pizzaId">
                <column name="pizzaId" length="50"/>
            </basic> 
            <basic name="quantity">
                <column name="quantity" length="50"/>
            </basic>
            <basic name="priceEach">
               <column name="priceEach" length="15"/>
            </basic>
         </attributes>
    </entity>
</entity-mappings>